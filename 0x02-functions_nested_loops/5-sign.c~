#include "main.h"
/**
 * print_sign - checks for sign and returns 1 when true
 * @n: Input type required
 *
 * Return: On success 1.
 * On error, -1 is returned, and errno is set appropriately.
 */
int print_sign(int n)
{
	if (n > 0)
	{
		_putchar('+');
		return (0);
	}
	else if (n == 0)
	{
		_putchar('0');
		return (1);
	}
	else
	{
		_putchar('-');
		return (-1);
	}
}
